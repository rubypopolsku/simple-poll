<p style="color: green"><%= notice %></p>

<h1>Polls</h1>

<div id="polls">
  <% @polls.each do |poll| %>
    <%= render poll %>
    <p>
      <%= link_to "Show this poll", poll %>
    </p>
    <p>
      <%= link_to "Show results", poll_results_url(poll) %>
    </p>
    <hr>
  <% end %>
</div>

<%= link_to "New poll", new_poll_path %>
